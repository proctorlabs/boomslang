{
	"name": "Rust",
	"dockerFile": "Dockerfile",
	"runArgs": [
		"--cap-add=SYS_PTRACE",
		"--security-opt",
		"seccomp=unconfined",
		"--net",
		"host",
		"--mount",
		"type=bind,source=${env:HOME}/.ssh,destination=/home/dev/.ssh,readonly"
	],
	"extensions": [
		"rust-lang.rust",
		"bungcip.better-toml",
		"vadimcn.vscode-lldb"
	],
	"settings": {
		"lldb.executable": "/usr/bin/lldb-3.9"
	}
}